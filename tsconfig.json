{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es2017",
        "declaration": false,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "paths": {
            "~/app/*": ["./src/app/*"],
            "~/entities/*": ["./src/entities/*"],
            "~/features/*": ["./src/features/*"],
            "~/pages/*": ["./src/pages/*"],
            "~/widgets/*": ["./src/widgets/*"],
            "~/shared/*": [ "./src/shared/*" ],
            "~/images/*": ["./src/app/images/*"]
        },
        "lib": [
            "ESNext",
            "DOM"
        ]
    },
    "ts-node": {
        "files": true
    }
}
