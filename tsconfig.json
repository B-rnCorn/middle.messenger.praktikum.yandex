{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2017",
        "declaration": false,
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "~/app/*": ["./src/app/*"],
            "~/entities/*": ["./src/entities/*"],
            "~/features/*": ["./src/features/*"],
            "~/pages/*": ["./src/pages/*"],
            "~/widgets/*": ["./src/widgets/*"],
            "~/shared/*": [ "./src/shared/*" ]
        },
        "exclude": ["node_modules"]
    }
}
