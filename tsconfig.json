{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2022",
        "declaration": false,
        "module": "es2022",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "~/app/*": ["./src/app/*"],
            "~/entities/*": ["./src/entities/*"],
            "~/features/*": ["./src/features/*"],
            "~/pages/*": ["./src/pages/*"],
            "~/widgets/*": ["./src/widgets/*"],
            "~/shared/*": [ "./src/shared/*" ],
            "~/images/*": ["./src/app/images/*"]
        },
        "exclude": ["node_modules", "**/*.hbs"]
    }
}
